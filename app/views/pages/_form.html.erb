<% if @page.errors.any?%>
<ul>
  <% @page.errors.full_messages.each do|msg| %>
    <li><%= msg %></li>
  <%end%>
</ul>
<%end%>
  
<%= form_for @page do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title%> 
  </p>
  
  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <%= link_to "Go To List articles" , pages_path%>

<% end %>